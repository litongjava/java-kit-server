[Unit]
Description=java-kit-server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/data/apps/java-kit-server
Environment="PATH=/root/.nvm/versions/node/v22.20.0/bin:$PATH"
ExecStart=/usr/java/jdk1.8.0_411/bin/java -jar java-kit-server-1.0.0.jar --server.port=8000
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=default.target