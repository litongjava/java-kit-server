[Unit]
Description=java-kit-server
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/data/apps/java-kit-server
Environment="PATH=/root/miniconda3/bin:/root/.nvm/versions/node/v25.2.1/bin:$PATH"
ExecStart=/usr/java/jdk-21.0.6/bin/java -jar java-kit-server-1.0.0.jar --server.port=8001
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=default.target